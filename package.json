{
  "name": "tomato-clock",
  "version": "1.0.0",
  "description": "A Pomodoro Timer app with a to-do list, built with Tailwind CSS and vanilla JavaScript.",
  "main": "script.js",
  "type": "module",
  "scripts": {
    "build": "tailwindcss -i ./style.css -o ./public/style.css --minify && copyfiles index.html script.js public",
    "dev": "npx tailwindcss -i ./style.css -o ./public/style.css --watch",
    "start": "serve public"
  },
  "keywords": [
    "pomodoro",
    "tailwind-css",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "@auth/core": "^0.40.0",
    "@vercel/kv": "^3.0.0"
  }
}
